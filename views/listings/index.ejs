
<%layout("/layouts/boilerplate")%>
<style>
  .listing-link {
    text-decoration: none;
    color: inherit;
  }
  .card {
    transition: transform 0.2s, box-shadow 0.2s;
    border-radius: 1rem;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
    border: none;
  }
  .card:hover {
    transform: translateY(-8px) scale(1.03);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }
  .card-img-top {
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
    object-fit: cover;
    height: 18rem;
  }
  .card-body {
    padding: 1.25rem 1.75rem 1rem 1.75rem;
  }
  .card-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #0d6efd;
    margin-bottom: 0.75rem;
    margin-top: 0.25rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
  .card-price {
    font-size: 1.1rem;
    color: #212529;
    font-weight: 500;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
  }
</style>

<div class="container py-4 px-3 px-md-5">
  <h2 class="mb-4 fw-bold text-primary text-center">All Listings</h2>
  <% if (typeof notFoundMsg !== 'undefined' && notFoundMsg) { %>
    <div class="alert alert-warning text-center" role="alert">
      <%= notFoundMsg %>
    </div>
  <% } %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for(let listing of allListings){ %>
      <div class="col">
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card h-100">
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <div class="card-title"><%=listing.title%></div>
                <div class="card-price">&#8377;<%=listing.price.toLocaleString("en-IN")%> <span class="text-muted" style="font-size:0.95rem;">/ Night</span></div>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
